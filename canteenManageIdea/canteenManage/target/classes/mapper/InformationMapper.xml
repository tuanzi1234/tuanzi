<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.InformationMapper">

<!--    SELECT * FROM information WHERE title LIKE '%{title}%' or content LIKE '%{content}%' -->
   <select id="selectAll" resultType="com.example.entity.Information">
        select * from `information`
        <where>
            <if test="title != null"> and title like concat('%', #{title}, '%')</if>
        </where>
    </select>

    <!-- insert into information (id, title, ...) values ('information', 'information', ...) -->
    <insert id="insert" parameterType="com.example.entity.Information" useGeneratedKeys="true">
        insert into `information`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="time != null">time,</if>
            <if test="img != null">img,</if>
            <if test="username != null">username,</if>
            <if test="num != null">num,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="time != null">#{time},</if>
            <if test="img != null">#{img},</if>
            <if test="username != null">#{username},</if>
            <if test="num != null">#{num},</if>
        </trim>
    </insert>


    <!--    UPDATE information SET title = 'new_title', content = 'new_content' WHERE id = #{id} -->
    <update id="updateById" parameterType="com.example.entity.Information">
        update `information`
        <set>
            <if test="title!= null">title = #{title},</if>
            <if test="img!= null">img = #{img},</if>
            <if test="content != null">content = #{content},</if>
            <if test="num != null">num = #{num},</if>
        </set>
        where id = #{id}
    </update>
</mapper>