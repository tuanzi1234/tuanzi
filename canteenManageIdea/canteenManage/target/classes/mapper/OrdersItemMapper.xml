<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.OrdersItemMapper">

    <select id="selectAll" resultType="com.example.entity.OrdersItem">
        select orders_item.*, student.name as studentName, student.avatar as studentAvatar from `orders_item`
        left join student on orders_item.student_id = student.id
        <where>
            <if test="orderId != null"> and orders_item.order_id = #{orderId}</if>
        </where>
    </select>

    <insert id="insert" parameterType="com.example.entity.OrdersItem" useGeneratedKeys="true">
        insert into `orders_item`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="dishId != null">dish_id,</if>
            <if test="num != null">num,</if>
            <if test="studentId != null">student_id,</if>
            <if test="orderId != null">order_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="dishId != null">#{dishId},</if>
            <if test="num != null">#{num},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="orderId != null">#{orderId},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.OrdersItem">
        update `orders_item`
        <set>
            <if test="score != null">
                score = #{score},
            </if>
            <if test="comment != null">
                comment = #{comment},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>