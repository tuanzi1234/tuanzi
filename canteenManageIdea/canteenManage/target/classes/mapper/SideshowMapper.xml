<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SideshowMapper">

<!--    SELECT * FROM sideshow WHERE title LIKE '%{name}%'  -->
   <select id="selectAll" resultType="com.example.entity.Sideshow">
        select * from `sideshow`
        <where>
            <if test="name != null"> and title like concat('%', #{name}, '%')</if>
        </where>
    </select>

    <!-- insert into sideshow (id, name, ...) values ('sideshow', 'sideshow', ...) -->
    <insert id="insert" parameterType="com.example.entity.Sideshow" useGeneratedKeys="true">
        insert into `sideshow`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="img != null">img,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="img != null">#{img},</if>
        </trim>
    </insert>


    <!--    UPDATE sideshow SET name = 'new_name', img = 'new_img' WHERE id = #{id} -->
    <update id="updateById" parameterType="com.example.entity.Sideshow">
        update `sideshow`
        <set>
            <if test="name!= null">name = #{name},</if>
            <if test="img != null">img = #{img},</if>
        </set>
        where id = #{id}
    </update>
</mapper>