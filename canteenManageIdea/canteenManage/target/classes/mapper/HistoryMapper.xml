<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.HistoryMapper">

    <select id="selectAll" resultType="com.example.entity.History">
        select history.*, student.name as studentName from `history`
        left join student on history.student_id = student.id
        <where>
            <if test="studentName != null"> and student.name like concat('%', #{studentName}, '%')</if>
            <if test="studentId != null"> and history.student_id = #{studentId}</if>
            <if test="dishId != null"> and history.dish_id = #{dishId}</if>
        </where>
        order by history.time desc
    </select>


    <!-- insert into history (...) values ('history', 'history', ...) -->
    <insert id="insert" parameterType="com.example.entity.History" useGeneratedKeys="true">
        insert into `history`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="studentId != null">student_id,</if>
            <if test="dishId != null">dish_id,</if>
            <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="dishId != null">#{dishId},</if>
            <if test="time != null">#{time},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.History">
        update `history`
        <set>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>