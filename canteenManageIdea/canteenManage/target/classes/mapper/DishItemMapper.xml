<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.DishItemMapper">

    <select id="selectAll" resultType="com.example.entity.DishItem">
        select dish_item.*, student.name as studentName from `dish_item`
        left join student on dish_item.student_id = student.id
        left join dish on dish_item.dish_id = dish.id
        <where>
            <if test="studentId != null"> and dish_item.student_id = #{studentId}</if>
            <if test="dishId != null"> and dish_item.dish_id = #{dishId}</if>
            <if test="dishName != null"> and dish.name like concat('%', #{dishName}, '%')</if>
        </where>
    </select>

    <insert id="insert" parameterType="com.example.entity.DishItem" useGeneratedKeys="true">
        insert into `dish_item`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="studentId != null">student_id,</if>
            <if test="dishId != null">dish_id,</if>
            <if test="num != null">num,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="dishId != null">#{dishId},</if>
            <if test="num != null">#{num},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.DishItem">
        update `dish_item`
        <set>
            <if test="num != null">
                num = #{num},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>