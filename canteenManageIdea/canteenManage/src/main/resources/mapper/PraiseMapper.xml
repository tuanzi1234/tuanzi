<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.PraiseMapper">

    <select id="selectAll" resultType="com.example.entity.Praise">
        select praise.*, student.name as studentName from `praise`
        left join student on praise.student_id = student.id
        <where>
            <if test="studentName != null"> and student.name like concat('%', #{studentName}, '%')</if>
            <if test="studentId != null"> and praise.student_id = #{studentId}</if>
            <if test="dishId != null"> and praise.dish_id = #{dishId}</if>
        </where>
    </select>


    <!-- insert into praise (...) values ('praise', 'praise', ...) -->
    <insert id="insert" parameterType="com.example.entity.Praise" useGeneratedKeys="true">
        insert into `praise`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="studentId != null">student_id,</if>
            <if test="dishId != null">dish_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="dishId != null">#{dishId},</if>
        </trim>
    </insert>



</mapper>